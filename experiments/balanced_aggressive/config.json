{
    "data_path": "data/xray_features_frontal_only.pt",
    "output_dir": "experiments",
    "experiment_name": "balanced_aggressive",
    "input_dim": 2048,
    "hidden_dims": [
        1024,
        512,
        256
    ],
    "num_classes": 1,
    "dropout_rate": 0.7,
    "activation": "relu",
    "batch_norm": true,
    "batch_size": 64,
    "num_epochs": 60,
    "learning_rate": 0.0003,
    "weight_decay": 0.0001,
    "optimizer": "adam",
    "momentum": 0.9,
    "use_scheduler": true,
    "scheduler_type": "cosine",
    "scheduler_step_size": 10,
    "scheduler_gamma": 0.5,
    "scheduler_patience": 5,
    "train_split": 0.8,
    "val_split": 0.2,
    "random_seed": 42,
    "pos_weight": null,
    "use_weighted_sampler": true,
    "use_early_stopping": true,
    "early_stopping_patience": 20,
    "save_best_only": true,
    "device": "cpu",
    "num_workers": 4,
    "print_every": 10,
    "save_plots": true,
    "verbose": true
}